###############################################
# AdvisorHub – .env.example (Frontend)
# Copy to .env.local and fill in values.
# Note: Only variables prefixed with VITE_ are exposed to the browser.
###############################################

# Supabase (required by frontend)
VITE_SUPABASE_URL=https://<your-project-ref>.supabase.co
VITE_SUPABASE_ANON_KEY=<your-anon-key>

# Optional: Service role for local Node scripts (never ship to client)
# Not exposed to browser because it lacks VITE_ prefix. Do not commit real keys.
SUPABASE_SERVICE_ROLE_KEY=

# Native Agent API (frontend calls the Supabase Edge Function)
# Defaults to /api if omitted, but using your full Functions URL avoids proxy issues.
VITE_AGENT_API_URL=https://<your-project-ref>.supabase.co/functions/v1

# AIAL demo/Quickstart flag (optional)
# Enables the demo page that can run via the native agent or a mock adapter.
VITE_MIRA_AIAL_ENABLED=true

# Optional: FE OpenAI adapter for AIAL demo ONLY. Do NOT use real keys in the browser.
# Leave unset to rely on the Supabase Edge function or mock adapter.
# VITE_OPENAI_API_KEY=
VITE_OPENAI_MODEL=gpt-4o-mini
VITE_OPENAI_TEMPERATURE=0.2
VITE_OPENAI_MAX_TOKENS=512

# Voice Recording & STT (Optional)
# For browser-based voice input (Web Speech API): No key required, works in Chrome/Edge
# For OpenAI Whisper API fallback: Add your OpenAI API key
# WARNING: Only use Whisper API key if you understand the security implications
# Consider proxying through Supabase Edge Function instead for production
# VITE_OPENAI_API_KEY=sk-...

# Backend (Supabase Edge Function) secrets – DO NOT put here.
# Set these in your Supabase project (Functions > agent-chat settings):
#   OPENAI_API_KEY=sk-...
#   OPENAI_MODEL=gpt-4o-mini (optional)
#   OPENAI_BASE_URL=https://api.openai.com/v1 (optional)
#   OPENAI_TEMPERATURE=0.2 (optional)
#   OPENAI_MAX_TOKENS=512 (optional)

# E2E credentials (optional, local testing only)
E2E_EMAIL=
E2E_PASSWORD=

