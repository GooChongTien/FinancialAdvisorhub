        "Task",
        "Appointment"
      ],
      "default": "Task"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "time": {
      "type": "string"
    },
    "duration": {
      "type": "string",
      "description": "Duration in minutes"
    },
    "completed": {
      "type": "boolean",
